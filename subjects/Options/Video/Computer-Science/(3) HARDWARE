    <script>
        // Function to switch videos
        const videoPlayer = document.getElementById('video-player');
        const playlistItems = document.querySelectorAll('.playlist-item');
        playlistItems.forEach(item => {
            item.addEventListener('click', () => {
                const videoId = item.getAttribute('data-video-id');
                videoPlayer.src = `https://www.youtube.com/embed/${videoId}`;
                
                // Highlight the selected video
                playlistItems.forEach(i => i.style.backgroundColor = '#303030');
                item.style.backgroundColor = '#404040';
            });
        });

        // Function to toggle playlist visibility
        const toggleButton = document.getElementById('toggle-button');
        const playlist = document.querySelector('.playlist');
        toggleButton.addEventListener('click', () => {
            playlist.classList.toggle('collapsed');
            if (playlist.classList.contains('collapsed')) {
                toggleButton.textContent = 'Open Playlist';
            } else {
                toggleButton.textContent = 'Collapse Playlist';
            }
        });
    </script>
